// filter
.filter

  .filter__heading.h3 Фильтр
    button.filter__close.d-md-none
      +icon('close', 'filter__close-icon')

  .filter__main

    .filter__section
      .filter__title Цена #[span / RUB]
      .filter__body

        include ui-slider

        .filter__option.checkbox-label
          input.checkbox-label__input(type="checkbox" name="is-available" id="opt-avail")
          label.checkbox-label__main(for="opt-avail") На складе

        .filter__option.checkbox-label
          input.checkbox-label__input(type="checkbox" name="is-discount" id="opt-discount")
          label.checkbox-label__main(for="opt-discount") Распродажа

        .filter__option.checkbox-label
          input.checkbox-label__input(type="checkbox" name="is-action" id="opt-action")
          label.checkbox-label__main(for="opt-action") Акции

    .filter__section
      .filter__title Бренд
      .filter__body

        .filter__option.checkbox-label
          input.checkbox-label__input(type="checkbox" name="Samsung" id="opt-samsung")
          label.checkbox-label__main(for="opt-samsung") Samsung
            small.checkbox-label__amount (3)

        .filter__option.checkbox-label
          input.checkbox-label__input(type="checkbox" name="Lenovo" id="opt-lenovo")
          label.checkbox-label__main(for="opt-lenovo") Lenovo
            small.checkbox-label__amount (95)

        .filter__option.checkbox-label
          input.checkbox-label__input(type="checkbox" name="ACER" id="opt-acer")
          label.checkbox-label__main(for="opt-acer") ACER
            small.checkbox-label__amount (60)

        .filter__option.checkbox-label
          input.checkbox-label__input(type="checkbox" name="Asus" id="opt-asus")
          label.checkbox-label__main(for="opt-asus") Asus
            small.checkbox-label__amount (11)

        .filter__option.checkbox-label
          input.checkbox-label__input(type="checkbox" name="LG" id="opt-lg")
          label.checkbox-label__main(for="opt-lg") LG (Hi-Technology)
            small.checkbox-label__amount (43)

        .filter__option.checkbox-label.is-field-off
          input.checkbox-label__input(type="checkbox" name="Dell" id="opt-dell")
          label.checkbox-label__main(for="opt-dell") Dell
            small.checkbox-label__amount (744)

        .filter__option.checkbox-label.is-field-off
          input.checkbox-label__input(type="checkbox" name="HP" id="opt-hp")
          label.checkbox-label__main(for="opt-hp") HP
            small.checkbox-label__amount (6785)

        .filter__option.checkbox-label.is-field-off
          input.checkbox-label__input(type="checkbox" name="Apple" id="opt-apple")
          label.checkbox-label__main(for="opt-apple") Apple
            small.checkbox-label__amount (75)

        a.filter__more-options(href="#") #[span Показать все] (3)

    .filter__section.is-hidden
      .filter__title Размеры
      .filter__body

        .filter__option.checkbox-label
          input.checkbox-label__input(type="checkbox" name="sm" id="opt-sm")
          label.checkbox-label__main(for="opt-sm") sm

        .filter__option.checkbox-label
          input.checkbox-label__input(type="checkbox" name="xxl" id="opt-xl")
          label.checkbox-label__main(for="opt-xl") xl

        .filter__option.checkbox-label
          input.checkbox-label__input(type="checkbox" name="xxl" id="opt-xxl")
          label.checkbox-label__main(for="opt-xxl") xxl

        .filter__option.checkbox-label
          input.checkbox-label__input(type="checkbox" name="xxxl" id="opt-xxxl")
          label.checkbox-label__main(for="opt-xxxl") xxxl

    .filter__section.is-hidden
      .filter__title Цвета
      .filter__body

        .filter__option.checkbox-label
          input.checkbox-label__input(type="checkbox" name="red" id="opt-red")
          label.checkbox-label__main(for="opt-red") Красный

        .filter__option.checkbox-label
          input.checkbox-label__input(type="checkbox" name="orange" id="opt-orange")
          label.checkbox-label__main(for="opt-orange") Оранжевый

        .filter__option.checkbox-label
          input.checkbox-label__input(type="checkbox" name="brown" id="opt-brown")
          label.checkbox-label__main(for="opt-brown") Коричневый

        .filter__option.checkbox-label
          input.checkbox-label__input(type="checkbox" name="yellow" id="opt-yellow")
          label.checkbox-label__main(for="opt-yellow") Желтый

        .filter__option.checkbox-label
          input.checkbox-label__input(type="checkbox" name="purple" id="opt-purple")
          label.checkbox-label__main(for="opt-purple") Фиолетовый

    .filter__section
      .filter__title Доставка
      .filter__body

        .filter__option.radio-label
          input.radio-label__input(type="radio" name="is-delivery" checked id="dlv-1")
          label.radio-label__main(for="dlv-1") Доставка
            small.checkbox-label__amount (744)

        .filter__option.radio-label
          input.radio-label__input(type="radio" name="is-delivery" id="dlv-2")
          label.radio-label__main(for="dlv-2") Самовывоз
            small.radio-label__amount (15)

    .filter__section.is-hidden
      .filter__title Характеристики
      .filter__body

        .filter__option.checkbox-label
          input.checkbox-label__input(type="checkbox" name="char-1" id="opt-char-1")
          label.checkbox-label__main(for="opt-char-1") Характеристика-1

        .filter__option.checkbox-label
          input.checkbox-label__input(type="checkbox" name="char-2" id="opt-char-2")
          label.checkbox-label__main(for="opt-char-2") Характеристика-2

        .filter__option.checkbox-label
          input.checkbox-label__input(type="checkbox" name="char-3" id="opt-char-3")
          label.checkbox-label__main(for="opt-char-3") Характеристика-3

        .filter__option.checkbox-label
          input.checkbox-label__input(type="checkbox" name="char-4" id="opt-char-4")
          label.checkbox-label__main(for="opt-char-4") Характеристика-4

        .filter__option.checkbox-label
          input.checkbox-label__input(type="checkbox" name="char-5" id="opt-char-5")
          label.checkbox-label__main(for="opt-char-5") Характеристика-5

        .filter__option.checkbox-label.is-field-off
          input.checkbox-label__input(type="checkbox" name="char-6" id="opt-char-6")
          label.checkbox-label__main(for="opt-char-6") Характеристика-6

        .filter__option.checkbox-label.is-field-off
          input.checkbox-label__input(type="checkbox" name="char-7" id="opt-char-7")
          label.checkbox-label__main(for="opt-char-7") Характеристика-7

        a.filter__more-options(href="#") #[span Показать все] (2)

    .filter__section
      .filter__title Селект опции
      .filter__body

        select.js-select-default
          option(placeholder) Выберите опцию
          option(value="s-opt-1") Опция 1
          option(value="s-opt-2") Опция 2
          option(value="s-opt-3") Опция 3
          option(value="s-opt-4") Опция 4

    .filter__section
      .filter__title Чекбоксы в ряд
      .filter__body.filter__body--checkbox-row

        .filter__option.checkbox-label
          input.checkbox-label__input(type="checkbox" name="char-2" id="opts-char-2")
          label.checkbox-label__main(for="opts-char-2") Хар-2
            small.checkbox-label__amount 3

        .filter__option.checkbox-label
          input.checkbox-label__input(type="checkbox" name="char-3" id="opts-char-3")
          label.checkbox-label__main(for="opts-char-3") Х-3
            small.checkbox-label__amount 726

        .filter__option.checkbox-label
          input.checkbox-label__input(type="checkbox" name="char-6" id="opts-char-6")
          label.checkbox-label__main(for="opts-char-6") ка-6
            small.checkbox-label__amount 576

        .filter__option.checkbox-label
          input.checkbox-label__input(type="checkbox" name="char-1" id="opts-char-1")
          label.checkbox-label__main(for="opts-char-1") Характеристика-1
            small.checkbox-label__amount 12

        .filter__option.checkbox-label
          input.checkbox-label__input(type="checkbox" name="char-4" id="opts-char-4")
          label.checkbox-label__main(for="opts-char-4") Характер
            small.checkbox-label__amount 11

        .filter__option.checkbox-label
          input.checkbox-label__input(type="checkbox" name="char-5" id="opts-char-5")
          label.checkbox-label__main(for="opts-char-5") стика-5
            small.checkbox-label__amount 5

        .filter__option.checkbox-label
          input.checkbox-label__input(type="checkbox" name="char-7" id="opts-char-7")
          label.checkbox-label__main(for="opts-char-7") терист-7
            small.checkbox-label__amount 16

    .filter__footer

        .filter__btns
            a.filter__btn-reset.btn.btn--primary(href="#") Применить
            a.filter__btn-accept.btn(href="#") 
              +icon('update-arrow', 'filter__btn-icon')
              | Сбросить
