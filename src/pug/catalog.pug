extends templates/inner

block variables
  - let title = 'Каталог';
  - let pageClass = 'catalog-page';
  - let pageHeading = 'Каталог товаров';
  - let breadcrumbs = true;

block sidebar
  include components/category-nav
  include components/filter

  figure.subscribe-widget.d-none.d-md-block
    +icon('paper-plane', 'subscribe-widget__icon')
    figcaption.subscribe-widget__footer
      p.subscribe-widget__desc Будьте в курсе наших акций и новостей
      a.subscribe-widget__btn.btn.btn--reverse.btn--radius(href="#") Подписаться

  ul.subscribe-helpers.d-none.d-md-block
    li.subscribe-helpers__helper
      a.subscribe-helpers__link(href="#")
        +icon('phone-call', 'subscribe-helpers__icon')
        span.subscribe-helpers__text Заказать звонок
    li.subscribe-helpers__helper
      a.subscribe-helpers__link(href="#")
        +icon('email', 'subscribe-helpers__icon')
        span.subscribe-helpers__text Задать вопрос
    li.subscribe-helpers__helper
      a.subscribe-helpers__link(href="#")
        +icon('eye', 'subscribe-helpers__icon')
        span.subscribe-helpers__text Оставить отзыв
  

